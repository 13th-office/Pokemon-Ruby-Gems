<h1> New Trainer </h1>

<%= form_with model: @trainer do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <% @trainer.errors.full_messages_for(:name).each do |message| %>
      <div style="color: red"><%= message %></div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
