<h1>Pokedex Home</h1>

<h2> Oponents </h2>
<% if @trainers.empty? %>
    <p>No oponents yet! Invite your friends</p>
<% end %>
<ul>
    <% @trainers.each do |trainer| %>
        <li>
            <%= link_to trainer.name, trainer%>
        </li>
    <% end %>
</ul>

<h2> My Pokemons </h2>
<% if @pokemons.empty? %>
    <p>OMG You don't have any pokemons!</p>
<% end %>
<ul>
    <% @pokemons.each do |pokemon| %>
        <li>
            <%= link_to pokemon.name, pokemon%>
        </li>
    <% end %>
</ul>

<%= link_to "Catch new Pokemons!", "/pokemons/discover"%>
<br/>
<%= link_to "Settings", "/settings"%>