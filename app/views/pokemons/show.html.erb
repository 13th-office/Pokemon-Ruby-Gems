<h1> <%= @pokemon.name %> </h1>
<img src="<%= @pokemon.sprites.front_default %>" style="width: 300px;">

<h3> Types </h3>
<ul>
    <% @pokemon.types.each do |type| %>
        <li>
            <%= type.type.name%>
        </li>
    <% end %>
</ul>


<h3> Abilities </h3>

<ul>
    <% @pokemon.abilities.each do |ability| %>
        <li>
            <%= ability.ability.name%>
        </li>
    <% end %>
</ul>